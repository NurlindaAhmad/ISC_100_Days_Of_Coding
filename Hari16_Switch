package Day12;

import java.util.Scanner;

public class Hari16 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Masukkan angka bulan:");
        int bulan = scanner.nextInt();
        
        switch (bulan) {
            case 4:
            case 5:
            case 6:
            case 7:
            case 8:
            case 9:
            case 10:
                System.out.println("Musim kemarau");
                break;
            case 11:
            case 12:
            case 1:
            case 2:
            case 3:
                System.out.println("Musim Hujan");
                break;
            default:
                System.out.println("Bulan tidak valid");
        }
    }
}
