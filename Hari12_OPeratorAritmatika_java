package Day12;

import java.util.Scanner;


public class Hari12 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Jumlah kemeja anda : ");
        int pemesanan_kemeja = sc.nextInt();
        
        System.out.print("jumlah kotak: ");
        int jumlah_kotak = sc.nextInt();

        int kotak_yang_Terisi;
        int sisa_kotak ;
        
        kotak_yang_Terisi = pemesanan_kemeja / jumlah_kotak;
        sisa_kotak = pemesanan_kemeja % jumlah_kotak;
        
        System.out.println("Jumlah kotak telah terisi: " + kotak_yang_Terisi);
        System.out.println("Sisa kemeja yang belum terkemas: " + sisa_kotak);
    }
}
    
    
